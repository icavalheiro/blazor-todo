@inject ITodoService TodoService

<EditForm OnValidSubmit="@OnValidSubmission" Model="@Item">
    <DataAnnotationsValidator />
    <input type="text" name="add-todo" id="add-todo" placeholder="Add new item" class="container"
        @bind-value="Item.Name" />
    <ValidationSummary />
</EditForm>

@code {
    private TodoItem Item = new TodoItem();

    public void OnValidSubmission()
    {
        TodoService.AddTodo(Item);
        Item = new TodoItem();
    }
}